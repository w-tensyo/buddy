= render "/share/header"
.SignUpBody
  .SignUpBody__Content
    .SignUpBody__Content__Title
      %h2 ユーザー情報登録
    .SignUpBody__Content__EntryArea
      = form_for(@user, url: user_registration_path ) do |f|
        .SignUpBody__Content__EntryArea__ErrorMsgArea
          = render "devise/shared/error_messages", resource: @user
        .SignUpBody__Content__EntryArea__Form
          .SignUpBody__Content__EntryArea__Form__Title
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpLabel
              = f.label "ユーザー名"
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpRequired
              必須
          = f.text_field :name, autofocus: true, placeholder: "全角20文字以内", class: 'SignUpBody__Content__EntryArea__Form__Text'
        .SignUpBody__Content__EntryArea__Form
          .SignUpBody__Content__EntryArea__Form__Title
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpLabel
              = f.label "メールアドレス"
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpRequired
              必須
          = f.email_field :email, autofocus: true, placeholder: "exsample@buddy.com", autocomplete: "email", class: 'SignUpBody__Content__EntryArea__Form__Text'
        .SignUpBody__Content__EntryArea__Form
          .SignUpBody__Content__EntryArea__Form__Title
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpLabel
              = f.label "パスワード"
                - if @minimum_password_length
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpRequired
              必須
          = f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字6文字以上", class: 'SignUpBody__Content__EntryArea__Form__Text'

        .SignUpBody__Content__EntryArea__Form
          .SignUpBody__Content__EntryArea__Form__Title
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpLabel
              = f.label "パスワード再入力"
            .SignUpBody__Content__EntryArea__Form__Title__Label#SignUpRequired
              必須
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認の為、再入力をお願いいたします", class: 'SignUpBody__Content__EntryArea__Form__Text'
        .SignUpBody__Content__EntryArea__Form
          .actions
            = f.submit "次へ", class: "SignUpBody__Content__EntryArea__Form__Btn"
= render "/share/footer"
